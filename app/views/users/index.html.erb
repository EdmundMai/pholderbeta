	<% provide(:title, "All users") %>

	<% @users.each do |user| %>
	<div>
	<%= link_to user.name, user_path(user) %>
	<% unless current_user.friends.include?(user) || current_user == user %>
	<%= link_to "Add friend", user_friends_path(:user_id => current_user.id, :friend_id => user.id), :method => :post %>
	<% end %>
	</div>
	<% end %>

